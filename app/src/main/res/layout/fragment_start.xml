<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.start.StartFragment">
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0.dp"
        android:layout_weight="0.4"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ellipsize="end"
        android:paddingHorizontal="16.dp"
        android:fontFamily="Roboto"
        android:gravity="center"
        android:minLines="2"
        android:maxLines="2"
        android:text="@string/title_courses"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:layout_marginBottom="32.dp"
        android:layout_gravity="center_horizontal"/>

    <android.widget.HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:scaleType="centerInside"
                android:src="@drawable/courses" />
        </LinearLayout>
    </android.widget.HorizontalScrollView>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="0.dp"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_start"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16.dp"
        android:text="@string/contin"
        android:textSize="18.sp"
        android:fontFamily="Roboto"
        android:layout_marginBottom="32.dp"
        android:backgroundTint="@color/brand_green"
        android:layout_gravity="bottom">
    </Button>

</LinearLayout>